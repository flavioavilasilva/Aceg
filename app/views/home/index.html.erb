							<% @animais.each do |animais| %>
	
							<li>
								<a href="animais/<%= animais.id %>">
									<%= image_tag animais.foto.url(:thumb),:class=>"medium" %>
									<div class="pe-description">
										<h3><%= animais.nome.capitalize%></h3>
										<p><%= animais.descricao_animal[0..100]+"..."%></p>
									</div>
								</a>
