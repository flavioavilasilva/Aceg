					<% end %>

					<% if !@gato_prioridade.blank? %>
					
					<div class="animalPrioridade">
						<h2><%= @gato_prioridade.first.nome.capitalize %></h2>
		
						<div class="canvas">
							<%=link_to (image_tag @gato_prioridade.first.foto.url(:thumb),:class=>"thumbs"), @gato_prioridade.first, {:title => 								@gato_prioridade.first.nome.capitalize} %>
						</div>
	
						<div class="descricaoAnimal">
							<p><%= @gato_prioridade.first.descricao_animal[0..150]+"..." %></p>
							<%= link_to '+ Detalhes', @gato_prioridade.first, {:class=>"linkDetalhe"} %>
						</div>
	
						
	
